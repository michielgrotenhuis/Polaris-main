<style>
    .connect-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 500px;
        background: {{ "home.connect_bg_color" | setting }};
    }

    .connect-container .wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .connect-container .content {
        max-width: 500px;
        width: 100%;
    }

    .connect-container .content h3 {
        font-size: 40px;
        font-style: normal;
        font-weight: 500;
        line-height: 44px;
        letter-spacing: -0.4px;
        color: {{ "home.connect_color" | setting }};
    }

    .connect-container .content p {
        font-size: 16px;
        font-style: normal;
        font-weight: 400;
        line-height: 24px;
        letter-spacing: -0.4px;
        color: {{ "home.connect_color" | setting }};
    }

    .connect-container .content .input-container {
        position: relative;
    }

    .connect-container .content .input-container input {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;

        border-radius: 6px;
        border: 1px solid #CBCBCB;
        background: #FFF;

        padding: 0 16px 0 48px;

        height: 52px;
        width: 100%;

        outline: none;
    }

    .connect-container .content .input-container i {
        position: absolute;
        left: 16px;
        font-size: 24px;
        top: 14px;

        color: {{ "home.connect_color" | setting }};
    }

    .connect-container .content .input-container span {
        position: absolute;
        right: 16px;
        font-size: 16px;
        font-style: normal;
        font-weight: 400;
        line-height: 24px;
        letter-spacing: -0.4px;
        color: {{ "home.connect_color" | setting }};
        top: 14px;

        cursor: pointer;
    }
</style>

<div class="connect-container">
    <div class="wrapper">
        <div class="content">
            <h3>{{ "home.connect_title" | setting }}</h3>
            <p>{{ "home.connect_description" | setting | raw }}</p>
            <div class="input-container">
                <i class="ph ph-envelope"></i>
                <input type="email" placeholder="{{ "home.connect_placeholder" | setting }}" id="connect_email"/>
                <span class="signupBtn">
                    {{ "register.title" | trans }}
                </span>
            </div>
        </div>
    </div>
</div>

{% set imported_script %}
<script>
    $('.signupBtn').click(function() {
        window.location.href = "/account/register?email=" + $('#connect_email').val();
    });
</script>
{% endset %}

{% do append_script(imported_script) %}
